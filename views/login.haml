!!!
%html{"ng-app" => "App"}
	= haml :header
	%link{href: 'https://fonts.googleapis.com/css?family=Raleway:100', rel: 'stylesheet', type: 'text/css'}
	%body
		%div{class: 'container'}
			%div{class: 'main-title'}
				%h1.text-primary BacklogUI
				%h3 ver.Î±

			%form{name: "form", method: "post",action: "/oauth", class: "login-form  center-block"}
				%div{class: "policy-form"}
					%ng-include{:src => "'terms.txt'"}

				-if @error
					%p{class: "alert alert-danger"}
						{{ 'MESSAGE.LOGIN_FAILURE' | translate }}
				%div{class: "form-group"}
					%input{type: "text", name: "space_id", class: "form-control", placeholder: "Backlog{{ 'SPACE_ID' | translate }}  ({{ 'EXAMPLE' | translate }} https://[{{ 'SPACE_ID' | translate }}].backlog.jp)"}
				%div{class: "form-group"}
				%button{typ:"submit", class: "btn btn-primary center-block"}
					%span{class: "fa fa-sign-in"}
					&nbsp;
					{{ 'LOGIN' | translate }}
			%center
				%a{href: 'https://twitter.com/BacklogUI'}
					%span{class: "fa fa-twitter fa-3x"}
