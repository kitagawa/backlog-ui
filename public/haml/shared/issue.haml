%div{class: "panel panel-default issue-panel"}
	%div{class: "panel-heading"}
		%span{class: "fa fa-info-circle"}
			{{ 'ISSUE.INFORMATION' | translate }}
	%div{class: "panel-body"}
		%div{class: "issue-key"}
			%a{href: "/url/{{selecting_issue.issueKey}}", target: "window"}
				{{selecting_issue.issueKey}}
		%hr
		%div{class: "issue-title"}
			{{selecting_issue.summary}}		
		%hr
		%table{class: "issue-information"}
			%tr
				%td
					{{ 'ISSUE.ISSUE_TYPE' | translate }}
				%td
					{{selecting_issue.issueType.name}}
			%tr
				%td
					{{ 'ISSUE.PRIORITY' | translate }}
				%td
					{{selecting_issue.priority.name}}
			%tr
				%td
					{{ 'ISSUE.CATEGORY' | translate }}
				%td
					%div{"ng-repeat" => "category in selecting_issue.category"}
						{{category.name}}
			%tr
				%td
					{{ 'ISSUE.RESOLUTION' | translate }}
				%td
					{{selecting_issue.resolution.name}}
			%tr
				%td
					{{ 'ISSUE.VERSIONS' | translate }}
				%td
					%div{"ng-repeat" => "version in selecting_issue.versions"}
						{{version.name}}
			%tr
				%td
					{{ 'ISSUE.MILESTONE' | translate }}
				%td
					%div{"ng-repeat" => "milestone in selecting_issue.milestone"}
						{{milestone.name}}
			%tr
				%td
					{{ 'ISSUE.ASSIGNEE' | translate }}
				%td
					{{selecting_issue.assignee.name}}
			%tr
				%td
					{{ 'ISSUE.ESTIMATED_HOURS' | translate }}
				%td
					{{selecting_issue.estimatedHours}}
			%tr
				%td
					{{ 'ISSUE.ACTUAL_HOURS' | translate }}
				%td
					{{selecting_issue.actualHours}}
			%tr
				%td
					{{ 'ISSUE.CREATED' | translate }}
				%td
					{{selecting_issue.created|date: 'yyyy/MM/dd'}}
			%tr
				%td
					{{ 'ISSUE.START_DATE' | translate }}
				%td
					{{selecting_issue.startDate|date: 'yyyy/MM/dd'}}
			%tr
				%td
					{{ 'ISSUE.DUE_DATE' | translate }}
				%td
					{{selecting_issue.dueDate|date: 'yyyy/MM/dd'}}
			
		%div{class: "issue-description"}
			{{selecting_issue.description}}

